#! /bin/sh
# /etc/init.d/blah
#

# Some things that run always

chdir /home/pi/tingo

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    echo "Starting Tingo..."
    python tingo.py >/dev/null
    ;;
  stop)
    echo "Stopping Tingo..."
    sudo pkill -f tingo.py
    ;;
  restart)
    echo "Restarting Tingo..."
    sudo tingo stop
    sudo tingo start
    ;;
  update)
    echo "Updating Tingo..."
    git pull
    ;;
  *)
    echo "Usage: sudo tingo {start|stop|restart|update}"
    exit 1
    ;;
esac

exit 0
